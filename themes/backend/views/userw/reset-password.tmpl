{{ extends "layouts/main.tmpl" }}

{{ block title() }}
{{ T("text.resetPassword") }}
{{ end }}

{{ block body() }}
<h1 class="text-center">
  {{ T("text.resetPassword") }}
</h1>
<hr>
<form class="offset-md-2 col-md-8" action="{{ route("sign-up") }}" method="POST">
  {{ csrf() | raw }}
  <div class="form-group row">
    <label for="email" class="col-sm-2">{{ T("text.email") }}</label>
    <input type="email" class="form-control col-sm-10" id="email" name="email" value="{{ .form.Email }}">
  </div>
  <div class="form-group row">
    <label for="username" class="col-sm-2">{{ T("text.username") }}</label>
    <input type="username" class="form-control col-sm-10" id="username" name="username" value="{{ .form.Username }}">
  </div>
  <div class="form-group row">
    <label for="password" class="col-sm-2">{{ T("text.password") }}</label>
    <input type="password" class="form-control col-sm-10" id="password" name="password" value="{{ .form.Password }}">
  </div>
  <div class="form-group row">
    <label for="captcha" class="col-sm-2">{{ T("text.captcha") }}</label>
      <input type="text" class="form-control col-2" name="captcha">
      <div class="col-8">
        {{ .captcha.HTMLField("captcha_id") )}}
      </div>
  </div>
  <button type="submit" class="btn btn-primary">{{ T("text.signup") }}</button>
</form>
{{ end }}
