{{ import "layouts/partials/head.tmpl" }}
{{ import "layouts/partials/alert.tmpl" }}
{{ import "layouts/partials/adminlte.js.tmpl" }}

{{ block title() }}
Login
{{ end }}

<!DOCTYPE html>
<html>
<head>
  {{ yield head() }}
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            {{ param("title") }}
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
            <p class="login-box-msg">Create a new account</p>

            {{ yield alert() }}

            <form id="signupForm" action="{{ route("/backend/signup") }}" method="post" novalidate>
                {{ csrf() | raw }}
                <div class="form-group">
                    <div class="input-group mb-2">
                        <input type="text" name="username" class="form-control" placeholder="Username" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-2">
                        <input type="email" name="email" class="form-control" placeholder="Email" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-2">
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mt-1">
                        <input type="hidden" name="captcha_ticket" id="captchaTicket">
                        <input type="hidden" name="captcha_randstr" id="captchaRandstr">
                        <button type="button" class="btn btn-primary btn-block" id="btnSignup">
                            Sign up
                        </button>
                    </div>
                </div>
            </form>

            <p class="mb-0">
                Already have an account? <a href="{{ route("/backend/login") }}">Login now</a>.
            </p>
            </div>
        </div>
    </div>

    {{ yield adminlteJs() }}

    <script src="https://ssl.captcha.qq.com/TCaptcha.js"></script>
    <script src="/backend/static/js/user/signup.js"></script>
</body>
</html>
