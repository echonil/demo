{{ define "title" }}
{{ call .translate "text.changePassword" }}
{{ end }}

{{ define "content" }}
<h1 class="text-center">
  {{ call .translate "text.changePassword" }}
</h1>
<hr>
<form class="offset-md-2 col-md-8" action="{{ url "change-password" }}" method="POST">
  {{ .csrf }}
  <div class="form-group row">
    <label for="password" class="col-sm-3">{{ call .translate "text.currentPassword" }}</label>
    <input type="password" class="form-control col-sm-9" id="password" name="password" value="{{ .form.Password }}">
  </div>
  <div class="form-group row">
    <label for="newPassword" class="col-sm-3">{{ call .translate "text.newPassword" }}</label>
    <input type="password" class="form-control col-sm-9" id="newPassword" name="new_password" value="{{ .form.NewPassword }}">
  </div>
  <button type="submit" class="btn btn-primary">{{ call .translate "text.submit" }}</button>
</form>
{{ end }}
