{{ extends "layouts/main.tmpl" }}

{{ block title() }}
{{ T("text.changePassword") }}
{{ end }}

{{ block body() }}
<h1 class="text-center">
  {{ T("text.changePassword") }}
</h1>
<hr>
<form class="offset-md-2 col-md-8" action="{{ route("change-password") }}" method="POST">
  {{ csrf() | raw }}
  <div class="form-group row">
    <label for="password" class="col-sm-3">{{ T("text.currentPassword") }}</label>
    <input type="password" class="form-control col-sm-9" id="password" name="password" value="{{ .form.Password }}">
  </div>
  <div class="form-group row">
    <label for="newPassword" class="col-sm-3">{{ T("text.newPassword") }}</label>
    <input type="password" class="form-control col-sm-9" id="newPassword" name="new_password" value="{{ .form.NewPassword }}">
  </div>
  <button type="submit" class="btn btn-primary">{{ T("text.submit") }}</button>
</form>
{{ end }}
