{{ define "title" }}
{{ call .translate "Login" }}
{{ end }}

{{ define "content" }}
<h1 class="text-center">
  {{ call .translate "Login" }}
</h1>
<hr>
<form class="offset-md-2 col-md-8" action="{{ url "login" }}" method="POST">
  {{ .csrf }}
  <div class="form-group row">
    <input type="email" class="form-control" id="email" placeholder="{{ call .translate "text.email" }}" name="email" value="{{ .form.Email }}">
  </div>
  <div class="form-group row">
    <input type="password" class="form-control" id="password" placeholder="{{ call .translate "text.password" }}" name="password" value="{{ .form.Password }}">
  </div>
  <div class="form-group row">
      <input type="text" class="form-control col-2" placeholder="{{ call .translate "text.captcha" }}" name="captcha">
      <div class="col-10">
        {{ .captcha.HTMLField "captcha_id" }}
      </div>
  </div>
  <div class="form-group row">
    <button type="submit" class="btn btn-block btn-primary">{{ call .translate "Login" }}</button>
  </div>
  <div>
    <p>
      <a href="{{ url "reset-password" }}">Forgot password?</a>
    </p>
    <p>
      Don't have an account? <a href="{{ url "sign-up" }}">Create one now</a>.
    </p>
  </div>
</form>
{{ end }}
